/* pages/user/order.wxss */

/**订单类型 开始 **/
.scroll_view_h
{
  white-space:nowrap;
  display:flex;
  padding-top:10rpx;
}

.order-filter {
    width: 100%;
    height: 80rpx;
    color: #404245;
    font-size: 34rpx;
    text-align: center;
    box-sizing: border-box;
    background-color: #fff;
    border-bottom: #e2e2e2 1px solid;
}

.order-filter .filter-item {
    position: relative;
    display: block;
    float: left;
    width: 20%;
    height: 80rpx;
    box-sizing: border-box;
}

.order-filter .filter-item.active .text {
      border-bottom: #28b36f 15rpx solid;
}
.order-filter .filter-item .text {
    display: block;
    width: 90%;
    height: 95%;
    color: #404245;
    font-size:34rpx;
    text-align: center;
    box-sizing: border-box;
    margin: 0 auto;
}
/**订单类型 结束 **/


/**订单列表 开始 **/
.order-list {
    position: relative;
    display: block;
    width: 100%;
    text-align: center;
    overflow: hidden;
}
.order-list .list-item {
    position: relative;
    display: block;
    width: 100%;
    text-align: center;
    background-color: #fff;
    overflow: hidden;
    margin-top: 15px;
    border-top: #e2e2e2 1px solid;
    border-bottom: #e2e2e2 1px solid;
}
.order-list .list-item .item-header {
    position: relative;
    display: block;
    height: 34px;
    padding: 0 14px;
    background-color: #fff;
    overflow: hidden;
    border-bottom: #e2e2e2 1px solid;
}
/**订单列表 结束 **/
.order-list .list-item .item-header .header-sn {
    float: left;
    position: relative;
    width: 50%;
    display: block;
    color: #aaa;
    font-size: 13px;
    font-weight: 400;
    text-align: left;
    line-height: 34px;
}
.order-goods {
    position: relative;
    display: block;
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
}
.order-goods .goods-item {
    position: relative;
    display: block;
    width: 100%;
    height: 100px;
    box-sizing: border-box;
    border-bottom: #e2e2e2 1px solid;
    background-color: #fff;
}
.order-goods .goods-item .item-photo {
    position: absolute;
    top: 10px;
    left: 10px;
    display: block;
    width: 80px;
    height: 80px;
    overflow: hidden;
    border: #e2e2e2 1px solid;
}
.order-goods .goods-item .item-photo image {
    width: 100%;
    max-width: 100%;
    height: 100%;
    background-color: #fff;
}
.order-goods .goods-item .item-info {
    position: relative;
    display: block;
    height: 100%;
    box-sizing: border-box;
    margin-left: 104px;
    margin-right: 5px;
    overflow: hidden;
}
.app .info-name {
    position: relative;
    display: block;
    width: 100%;
    margin-top: 10px;
    box-sizing: border-box;
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    text-align: left;
    line-height: 14px;
}
.app .info-attr {
    position: relative;
    display: block;
    width: 100%;
    margin-top: 8px;
    box-sizing: border-box;
    color: #666;
    font-size: 13px;
    font-weight: 400;
    text-align: left;
    line-height: 14px;
}
.app .info-price {
    position: absolute;
    left: 0;
    bottom: 8px;
    width: 50%;
    display: block;
    box-sizing: border-box;
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    text-align: left;
    line-height: 16px;
}
.app .info-amount {
    position: absolute;
    right: 6px;
    bottom: 8px;
    width: 50%;
    display: block;
    box-sizing: border-box;
    color: #888;
    font-size: 14px;
    font-weight: 400;
    text-align: right;
    line-height: 16px;
}
.order-list .list-item .item-footer {
    position: relative;
    display: block;
    padding-right: 6px;
    background-color: #fff;
    overflow: hidden;
}
.order-list .list-item .item-footer .footer-sum {
    position: relative;
    display: block;
    height: 38px;
    overflow: hidden;
    color: #404245;
    font-size: 34rpx;
    font-weight: 400;
    text-align: right;
    line-height: 38px;
    clear: both;
}
.order-list .list-item .item-footer .footer-button.dark {
    background-color: #28b36f;
    color: #fff;
}
.order-list .list-item .item-footer .footer-button {
    position: relative;
    display: block;
    float: right;
    min-width: 76px;
    height: 28px;
    margin-left: 8px;
    margin-bottom: 10px;
    overflow: hidden;
    background-color: #eee;
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    text-align: center;
    line-height: 28px;
}
.order-list .list-item .item-header .header-status {
    float: left;
    position: relative;
    width: 50%;
    display: block;
    color: #28b36f;
    font-size: 14px;
    font-weight: 400;
    text-align: right;
    line-height: 34px;
}
/**订单列表 结束 **/