/* pages/user/carts.wxss */

/**购物车列表开始**/

.cart-list {
    /*margin-top: 15px;*/
    position: relative;
    display: block;
    width: 100%;
    box-sizing: border-box;
    /*border-top: #e2e2e2 1px solid;*/
    margin-bottom: 100px;
}
.cart-list .list-item 
{
    position: relative;
    display: block;
    width: 100%;
    height: 120px;
    box-sizing: border-box;
    border-bottom: #e2e2e2 1px solid;
    background-color: #fff;
    padding: 10px 0;
}
.cart-list .list-item .item-checkbox image
{
    position: absolute;
    top: 50%;
    left: 30rpx;
    margin-top: -10px;
    width: 40rpx;
    height: 40rpx;
}
.cart-list .list-item .item-photo {
    position: absolute;
    top: 10px;
    left: 44px;
    display: block;
    width: 90px;
    height: 90px;
    box-sizing: border-box;
    border: #e2e2e2 1px solid;
    overflow: hidden;
}
.cart-list .list-item .item-photo image {
    width: 100%;
    max-width: 100%;
    height: 100%;
    background-color: #fff;
}
.cart-list .list-item .item-info {
    position: relative;
    display: block;
    height: 100%;
    margin-left: 144px;
}
.cart-list .list-item .item-info .info-name {
    display: block;
    position: relative;
    margin-top: 4px;
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    text-align: left;
    line-height: 16px;
    box-sizing: border-box;
    padding-right: 54px;
    max-height: 32px;
    overflow: hidden;
}

.cart-list .list-item .item-info .info-attr {
    margin-top: 6px;
    position: relative;
    display: block;
    box-sizing: border-box;
    color: #999;
    font-size: 13px;
    font-weight: 400;
    text-align: left;
    line-height: 15px;
    padding-right: 44px;
}
.cart-list .list-item .item-info .info-price {
    position: absolute;
    left: 0;
    bottom: 2px;
    display: block;
    height: 24px;
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    text-align: left;
    line-height: 24px;
    box-sizing: border-box;
    overflow: hidden;
}
.cart-list .list-item .item-info .info-amount {
    position: absolute;
    right: 4px;
    bottom: 0;
    display: block;
    height: 24px;
    overflow: hidden;
}
.cart-list .list-item .item-info .info-amount .amount-button {
    float: left;
    display: block;
    width: 34px;
    height: 24px;
    overflow: hidden;
    box-sizing: border-box;
    opacity: .25;
}
.cart-list .list-item .item-info .info-amount .amount-button image {
    display: block;
    margin-top: 7px;
    margin-left: 12px;
    width: 12px;
    height: 12px;
    opacity: .75;
}
.cart-list .list-item .item-info .info-amount .active {
    opacity: 1;
}
.cart-list .list-item .item-info .info-amount .amount-count {
    float: left;
    display: block;
    min-width: 20px;
    height: 24px;
    overflow: hidden;
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    text-align: center;
    box-sizing: border-box;
    line-height: 24px;
}

.cart-list .list-item .item-info .info-delete {
    position: absolute;
    padding: 10px;
    top: 0;
    right: 0;
    display: block;
    width: 44px;
    height: 44px;
    overflow: hidden;
    z-index: 100;
}

.cart-list .list-item .item-info .info-delete image {
    margin-top: 15px;
    margin-left: 15px;
    width: 14px;
    height: 14px;
}

/**购物车列表结束**/


/**结算按钮开始**/
.cart-submit {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 100;
    width: 100%;
    height: 44px;
    box-sizing: border-box;
    border-top: #e2e2e2 1px solid;
    background-color: #f7f7f7;
    box-shadow:3px 0 7px rgba(0,0,0,.35);

}
.cart-submit .submit-select {
    float: left;
    position: relative;
    display: block;
    width: 30%;
    height: 100%;
    box-sizing: border-box;
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    text-align: left;
    line-height: 44px;
    padding-left: 44px;
    background-color: #f7f7f7;
}
.cart-submit .submit-select .select-checkbox image{
    position: absolute;
    top: 50%;
    left: 10px;
    margin-top: -10px;
    width: 40rpx;
    height: 40rpx;

}

.cart-submit .submit-total {
    float: left;
    position: relative;
    display: block;
    width: 30%;
    height: 100%;
    box-sizing: border-box;
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    text-align: right;
    padding-right: 14px;
    line-height: 44px;
    background-color: #f7f7f7;
    opacity: .25;
}
.cart-submit .submit-total.active {
    opacity: 1;
}
.cart-submit .submit-button.dark {
    color: #fff;
    background-color: #28b36f;
}

.cart-submit .submit-button.dark {
    color: #fff;
    background-color: #f4a719;
}
.cart-submit .submit-button {
    float: left;
    position: relative;
    display: block;
    width: 40%;
    height: 100%;
    box-sizing: border-box;
    color: #404245;
    font-size: 15px;
    font-weight: 400;
    background-color: #f7f7f7;
    line-height: 44px;
    text-align: center;
    opacity: .25;
}
.cart-submit .submit-button.active {
    opacity: 1;
}
/**结算按钮结束**/