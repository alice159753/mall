/* pages/user/collect.wxss */

.menu
{
  height: 45px;
  line-height: 43px;
  font-size: 15px;
  border-bottom: 2px solid #f2f2f2;
  color:#333;
}

.menu .menu_tab
{
  text-align: center;
  width: 50%;
  display: inline-block;
}

.menu .active
{
  border-bottom: 2px solid #f4a719;
}

.menu .menu_tab text
{
  padding: 2px 20px;
}



/**商品详情 开始**/
.app .product_lists
{
    width: 100%;
    margin-left:3%;
}
.app  .product_item
{
    margin-bottom: 0px;
    background-color: rgb(255, 255, 255);
    height: 230px;
    display: inline-block;
    padding-left: 0!important;
    width: 50%;
    position: relative;
    text-decoration: inherit;
}
.app  .product_item_left
{
  float: left;
}
.app  .product_item_right
{
  float: right;
}
 .app .inner_content
{
    display: inline-block;
    vertical-align: middle;
    height: auto;
    position: relative;
    width: 100%;
    text-decoration: inherit;
    border-radius: inherit;
    z-index: 1;
}
.app  .inner_content image
{
    width: 140px;
    height: 170px;
    vertical-align: middle;
}
.app  .product_item .product_title
{
    text-decoration: inherit;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    width: 100%;
    word-break: break-all;
    margin-top:10rpx;
}

.app .product_item .price 
{
    color: #f60;
    margin-right: 10px;
    display: inline-block;
}

.app .product_item .sales_num
{
    font-size: 12px;
    color: #a8a8a8;
    display: inline-block;
}
.app .product_item .buy_cars
{
    display: inline-block;
    width:50rpx;
    height:50rpx;
    text-align: center;
    line-height: 27px;
    font-size: 16px;
    overflow: hidden;
    position: absolute;
    bottom: -2px;
    right: 48rpx;
}

/**商品详情 结束**/

/**文章 开始**/
.app .newsIndex-newsList {
    margin-top: 5px;
    background: #fff;
}

.app .newsIndex-newsList .news-item {
    position: relative;
    margin: 0 15px;
    border-bottom: 1px solid #E9E9E9;
}

.app .newsIndex-newsList .news-img 
{
    margin-right: 10px;
    display: inline-block;
    margin: 12px 0;
    width: 100px;
    height: 75px;
    overflow: hidden;
}

.app .newsIndex-newsList .news-img image
{
   width: 134px;
   height: 75px;
}

.app .newsIndex-newsList .news-text 
{
    display: inline-block;
    margin-right: 0;
    width: 176px;
    vertical-align: top;
    padding-top: 12px;
    line-height: 20px;
    margin-left: 10px;
}

.app .newsIndex-newsList .news-text .news-title 
{
    max-height: 40px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #333;
    font-size: 16px;
}

.app .newsIndex-newsList .news-item .news-text-bottom {
    position: absolute;
    bottom: 0;
    width: 176px;
    margin-bottom: 12px;
    font-size: 12px;
    line-height: 12px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #999;
}

.app .newsIndex-newsList .news-text-bottom text {
    margin-right: 10px;
}

/**文章 结束**/