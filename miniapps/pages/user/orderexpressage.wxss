/* pages/user/orderexpressage.wxss */
.review-goods {
    position: relative;
    display: block;
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
}

.review-goods .goods-item {
    position: relative;
    display: block;
    width: 100%;
    box-sizing: border-box;
    border-bottom: #e2e2e2 1px solid;
    background-color: #fff;
    overflow: hidden;
}
.review-goods .goods-item .item-photo {
    position: absolute;
    top: 14px;
    left: 14px;
    display: block;
    width: 80px;
    height: 80px;
    overflow: hidden;
    border: #e2e2e2 1px solid;
}

.review-goods .goods-item .item-info {
    position: relative;
    display: block;
    min-height: 80px;
    padding: 14px 0;
    margin-left: 108px;
}
.review-goods .goods-item .item-info .info-name {
    color: #404245;
    font-size: 14px;
    font-weight: 400;
    line-height: 18px;
    overflow: hidden;
}
.review-goods .goods-item .item-info .info-attr {
    margin-top: 12px;
    position: relative;
    display: block;
    box-sizing: border-box;
    color:#f4a719;
    font-size: 13px;
    font-weight: 400;
    text-align: left;
    line-height: 15px;
    margin-bottom: 10px;
}

.default-card 
{
height:22px;
background-color:#9acf93;
font-size:12px;
padding:0 6px;
line-height:24px;
border-radius:4px;
text-align:center;
color:#fff;
position:absolute;
right:10px;
top:-5px;

}

/*物流信息开始*/
.g-mohe {
    font-size: 14px;
    background-color: #fff;
}
.mh-wrap {
    margin: 6px 0;
    height: 100%;
    max-height: 1000px;
    border-top: 1px solid #eee;
    padding: 15px 0;
}

.route_item {
    position: relative;
    border-bottom: 1px solid #f5f5f5;
    margin-bottom: 8px;
    padding-bottom: 8px;
    color: #666;
}
.route_item text
{
    line-height: 20px;
}
.before
{
   position: absolute;
    left: -13px;
    top: 2.2em;
    height: 82%;
    width: 0;
    border-left: 2px solid #ddd;
}
.route_item image
{
  position: absolute;
    left: -20px;
    top: 1.5em;
    width: 41px;
    height: 18px;
    margin-left: -41px;
    margin-top: -9px;
    background-position: 0 -58px;
}
/*物流信息结束*/