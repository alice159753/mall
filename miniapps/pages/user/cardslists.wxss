/* pages/user/cardslists.wxss */
.card-area {
    padding: 0px 15px;
    padding-bottom: 0;
    -webkit-box-shadow: 0 -4px 15px rgba(51,51,51,0.1);
    box-shadow: 0 -4px 15px rgba(51,51,51,0.1);
}
.card-item {
    width: 100%;
    background-color: #55bd47;
    display: block;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    position: relative;
    padding:10px 0px;
    margin-top: 15px;
}
.card-item .head {
    height: 16px;
    font-size: 16px;
    color: #fff;
    padding-left: 15px;
    padding-top: 15px;
    text-shadow: 0 1px 1px rgba(51,51,51,0.5);
}

.card-item .content-area {
    padding: 10px 15px 12px;
    overflow: hidden;
    font-size: 12px;
    line-height: 12px;
    color: #fff;
}
.card-item .rights {
    float: left;
    text-shadow: 0 1px 1px rgba(51,51,51,0.5);
    max-width: 18em;
    height: 12px;
    margin-top:20px;
    margin-right: 10px;
}

.card-item .state {
    float: right;
    text-shadow: 0 1px 1px rgba(51,51,51,0.5);
    margin-top:20px;
}

.default-card {
    background-image: url('data:image/png;base64,');
    background-size: 100%;
    width: 70px;
    height: 30px;
    background-repeat: no-repeat;
    position: absolute;
    right: -5px;
    top: 8px;
}