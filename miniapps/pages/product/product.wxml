<import src="../templates/tips.wxml"/>

<view class="app">


<!--商品详细-->
<swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">    
        <swiper-item>    
          <image src="http://img.weiye.me/zcimgdir/album/file_590037c92aacc.png" class="slide-image" mode="aspectFill" lazy-load="true"/>    
        </swiper-item>    
</swiper>  



<view class="productdetail">

    <!-- 商品信息 -->
    <view class="details">
        <image src="../../images/{{productDetail.shop_pic}}" class="product_shop_pic"></image>
        <view class="shop_name">测试</view>
        <view class="product_title mt20">擦擦擦擦擦擦错错</view>

        <view class="price_box mt20">
          <view class="price">¥111</view>
          <view class="sale_price">¥111111</view>
          <view class="sale_num">10万人已买</view>
        </view>

        <view class="desc_box mt20">
          <view class="repertory_num shop_name">库存 111</view>
          <view class="postage_price shop_name">运费 ¥111</view>
        </view>
  </view>

    <!-- 商品详细 -->
    <view class="product_detail_desc_logo bgf">
          <view class="line"></view>
          <image src="/images/xiangqing.png"></image>
          <text class="title">详情</text>
          <view class="line"></view>
    </view>

    <view class="product_gallery_detail">
      <image src="https://img.yzcdn.cn/upload_files/2017/06/19/Fna08FxNZDN37i6oxWOCK9KnQ8IQ.png?imageView2/2/w/980/h/980/q/75/format/webp"></image>
    
      <image src="https://img.yzcdn.cn/upload_files/2017/06/19/Fna08FxNZDN37i6oxWOCK9KnQ8IQ.png?imageView2/2/w/980/h/980/q/75/format/webp"></image>

      <image src="https://img.yzcdn.cn/upload_files/2017/06/19/Fna08FxNZDN37i6oxWOCK9KnQ8IQ.png?imageView2/2/w/980/h/980/q/75/format/webp"></image>



    </view>




</view>



<!--你可能会喜欢-->
<view class="shop bgf">
    <view class="blue"></view>
    <view class="shop_title">你可能会喜欢</view>
    <navigator hover-class="none" url="../product/productlists?category_no={{productDetail.category_no}}&title={{productDetail.category_title}}" hover-class='none' class="shop_more">
        <view class="shop_more_font">更多</view>
       <image class="shop_more_pic" src="../../images/arrow_r.png"></image>
    </navigator>
</view>


<view class="ele-container bgf mt20 mb800">

    <view class="product_lists fs32">
    
      <view class="product_item product_item_left">

        <navigator url="../product/product">

        <view class="inner_content">
            <image src="http://img.weiye.me/zcimgdir/album/file_590037fa63a14.png"></image>

            <view>
                <view class="product_title fs32">简约新款</view>
                <view class="mt20">
                    <view class="price">￥36.00</view>
                    <view class="sales_num color1">销量：7</view>
                    <image src="/images/buy_cars.png" class="buy_cars"></image>
                </view>

            </view>
        </view>

        </navigator>
      
      </view>

      <view class="product_item product_item_right">
      
        <navigator url="../product/product">

        <view class="inner_content">
            <image src="http://img.weiye.me/zcimgdir/album/file_590037e35addd.png"></image>

            <view>
                <view class="product_title">简约新款</view>
                <view class="mt20">
                    <view class="price">￥36.00</view>
                    <view class="sales_num color1">销量：7</view>
                    <image src="/images/buy_cars.png" class="buy_cars"></image>
                </view>

            </view>

        </view>

        </navigator>
      
      
      </view>

    </view>

</view>

<!-- 规格选择开始 -->
<view class="page-bottom-dialog">


</view>


<!-- 规格选择结束 -->



<!--购买按钮-->
<view class="product_buy">

  <view class="product_customer">
    <image src="/images/customer.png"></image>
    <text>客服</text>
  </view>

  <view class="product_user_cars fl">
    <image src="/images/buy_cars.png"></image>
    <text>购物车</text>
  </view>

  <view class="product_add_user_cars fl big-btn">加入购物车</view>

  <view class="product_buy_now fl big-btn">立即购买</view>

</view>




</view>